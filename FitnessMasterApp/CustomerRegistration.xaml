<Window x:Class="FitnessMasterApp.CustomerRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessMasterApp"
        mc:Ignorable="d"
        Title="CustomerRegistration" Height="450" Width="800">
    <Grid>

        <TextBlock Text="Фамилия" Margin="300,38,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="familiaTextBox" Text="Введите фамилию" Width="200" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top" TextChanged="UsernameTextBox_TextChanged"/>


        <TextBlock Text="Имя" Margin="300,82,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" Text="Введите имя" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="UsernameTextBox_TextChanged" Margin="0,98,0,0"/>


        <TextBlock Text="Отчество" Margin="300,121,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneTextBox" Text="Введите телефон" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="UsernameTextBox_TextChanged" Margin="0,176,0,0"/>
        <TextBlock Text="Номер телефона" Margin="300,160,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="othcestvoTextBox" Text="Введите отчество" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="UsernameTextBox_TextChanged" Margin="0,137,0,0"/>

        <TextBlock Text="Логин" Margin="300,199,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="LoginTextBox" Text="Введите логин" Width="200" HorizontalAlignment="Center" Margin="0,215,0,0" VerticalAlignment="Top" TextChanged="UsernameTextBox_TextChanged"/>


        <TextBlock Text="Пароль" Margin="300,238,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox  x:Name="PasswordBox" Width="200"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,254,0,0"/>

        <Button Content="Войти" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,285,0,0" Click="LoginButton_Click"/>
        <Button Content="Регистрация" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,320,0,84" Click="RegistrationButton_Click"/>
    </Grid>
</Window>
