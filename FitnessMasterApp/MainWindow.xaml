<Window x:Class="FitnessMasterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessMasterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="ФитнесМас" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,387"/>
        <TextBlock Text="Авторизация" FontSize="15" FontWeight="ExtraLight" HorizontalAlignment="Center" Margin="0,47,0,367"/>
        <TextBlock Text="Логин" Margin="300,86,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="LoginTextBox" Text="Введите логин" Width="200" HorizontalAlignment="Center" Margin="0,107,0,0" VerticalAlignment="Top" TextChanged="LoginTextBox_TextChanged"/>
        <TextBlock Text="Пароль" Margin="300,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,151,0,0"/>
        <Button Content="Войти" Height="30" Click="LoginButton_Click" Margin="0,174,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="72"/>
        <Button Content="Регистрация" Height="30" Click="RegistrationButton_Click" Margin="0,209,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>
