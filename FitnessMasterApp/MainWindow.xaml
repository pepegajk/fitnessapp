<Window x:Class="FitnessMasterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessMasterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="ФитнесМас" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <TextBlock Text="Авторизация" FontSize="15" FontWeight="ExtraLight" HorizontalAlignment="Center" Margin="0,47,0,0"/>


        <TextBlock Text="Логин" Margin="300,140,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="LoginTextBox" Text="Введите логин" Width="200" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top"/>


        <TextBlock Text="Пароль" Margin="300,187,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <Button Content="Войти" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,263,0,0" Click="LoginButton_Click"/>
        <Button Content="Регистрация" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,298,0,106" Click="RegistrationButton_Click"/>

    </Grid>
</Window>
