<Window x:Class="FitnessMasterApp.DirectorNavigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessMasterApp"
        mc:Ignorable="d"
        Title="DirectorNavigation" Height="450" Width="800">
    <Grid>
        <!-- Заголовок -->
        <TextBlock Text="ФитнесМас" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,3,0,0"/>
        <TextBlock Text="Директор" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,43,0,0"/>

        <!-- Кнопки управления -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="4,88,0,0">
            <Button Content="Отчеты" Width="200" Height="50" Name="ReportsButton" Click="ReportsButton_Click"/>
            <Button Content="Расписание" Width="200" Height="50" Name="ScheduleButton" Click="ScheduleButton_Click"/>
            <Button Content="Клиенты" Width="200" Height="50" Name="ClientsButton" Click="ClientsButton_Click"/>
            <Button Content="Выход" Width="200" Height="50" Name="ExitButton" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
