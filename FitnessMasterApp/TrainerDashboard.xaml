<Window x:Class="FitnessMasterApp.TrainerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Навигация тренера" Height="400" Width="600">
    <Grid>
        <!-- Заголовок -->
        <TextBlock Text="ФитнесМас" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TextBlock Text="Тренер" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0"/>

        <!-- Кнопки навигации -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button Content="Расписание" Width="200" Height="50" Click="ScheduleButton_Click"/>
            <Button Content="Клиенты" Width="200" Height="50" Click="ClientsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>